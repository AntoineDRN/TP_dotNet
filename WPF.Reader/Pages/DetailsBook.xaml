<Page x:Class="WPF.Reader.Pages.DetailsBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Reader.Pages"
      xmlns:vm="clr-namespace:WPF.Reader.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DetailsBook">
    <Page.Resources>
        <vm:DetailsBook x:Key="detailsBook" />
    </Page.Resources>

    <Grid Margin="91,78,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Left" DataContext="{StaticResource ResourceKey=detailsBook}">
        <!-- il faut afficher les information du livre: Nom, Auteur, Prix, Genres-->
        <!-- Mais pas le contenu ! -->
        
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Center"  VerticalAlignment="Bottom">
            <Button Command="{Binding Path=(vm:Navigator.Instance).GoTo}" CommandParameter="READ" Width="150" Content="Read Book" Height="32"/>
        </StackPanel>
    </Grid>
</Page>