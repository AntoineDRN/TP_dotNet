<Page x:Class="WPF.Reader.Pages.ReadBook"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF.Reader.Pages"
      xmlns:vm="clr-namespace:WPF.Reader.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReadBook">

    <Page.Resources>
        <vm:ReadBook x:Key="readBook" />
    </Page.Resources>

    <Grid DataContext="{StaticResource readBook}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="80" />
        </Grid.RowDefinitions>
        <!-- On aimerais bien avoir le tire du livre en entête -->
        
        <!-- Ainsi que le contenu du livre ! -->
        
        <!-- <TextBox /> -->
        <Button Grid.Row="2" Command="{Binding Path=(vm:Navigator.Instance).GoTo}" CommandParameter="LIST" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" Content="Allez a l'accueil" Margin="0,0,0,27"/>
    </Grid>
</Page>

